#!/usr/bin/env sh

# Usage: submit <day><part>
#
# Example: submit 1a
# Example: submit 25b

set -e

source "bin/validate_args"
source "bin/env"

case "$AOC_LANGUAGE" in
  python)
    uv run "aoc/utils/python/submit.py" "$@" ;;
  typescript)
    deno run --allow-env --allow-read "aoc/utils/typescript/submit.ts" "$@" ;;
  *)
    echo "Unsupported language: $AOC_LANGUAGE"
    exit 1 ;;
esac
