#!/usr/bin/env sh

# Usage:
#
# $ solve <year>-<day>-<part>
# $ solve <year>-<day>-<part> -s
# $ solve <year>-<day>-<part> --submit
#
# Examples:
#
# $ solve 2015-1-1
# $ solve 2015-1-1 -s
# $ solve 2023-25-2 --submit

# TODO: support this syntax?
#
# $ run 1a
# $ submit 1a

source "bin/env"

echo "ðŸŽ„ AOC_LANGUAGE: $AOC_LANGUAGE"
echo "ðŸŽ„ AOC_YEAR: $AOC_YEAR"

case "$AOC_LANGUAGE" in
  python)
    uv run "aoc/utils/python/solve.py" "$@"
    ;;
  typescript)
    deno run --allow-read "aoc/utils/typescript/solve.ts" "$@"
    ;;
  *)
    echo "Unsupported language: $AOC_LANGUAGE"
    exit 1
    ;;
esac
