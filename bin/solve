#!/usr/bin/env sh

# Usage:
#
# $ solve <year>-<day>-<part>
# $ solve <year>-<day>-<part> -s
# $ solve <year>-<day>-<part> --submit
#
# Examples:
#
# $ solve 2015-1-1
# $ solve 2015-1-1 -s
# $ solve 2023-25-2 --submit

# TODO: support this syntax?
#
# $ run 1a
# $ submit 1a

# if language is "python", call solve.py, but if it's "typescript", call solve.ts
if [ "$language" = "python" ]; then
    uv run "$PWD/aoc/utils/python/solve.py" "$@"
elif [ "$language" = "typescript" ]; then
    deno run "$PWD/aoc/utils/typescript/solve.ts" "$@"
else
    echo "Unsupported language: $language"
source "bin/env"

echo "ðŸŽ„ AOC_LANGUAGE: $AOC_LANGUAGE"
echo "ðŸŽ„ AOC_YEAR: $AOC_YEAR"
    exit 1
fi
