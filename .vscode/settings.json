{
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "deno.enable": true,
  "editor.formatOnSave": true,
  "files.associations": {
    ".aoc-session-cookie": "plaintext",
    "**/bin/*": "shellscript",
  },
  "search.exclude": {
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.venv": true
  },
  "search.useIgnoreFiles": false, // support searching for input and puzzle files (which aren't tracked)
}
